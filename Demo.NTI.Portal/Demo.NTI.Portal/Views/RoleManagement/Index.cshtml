@model IEnumerable<ApplicationRole>
@{
    ViewData["Title"] = "roles";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Roles Management</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Manage Role</a></li>
                        <li class="breadcrumb-item active">Roles</li>

                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>


    <section class="content">
        <div class="container-fluid">




            <div class="row">

                <a asp-controller="RoleManagement" asp-action="Create" class="btn btn-primary">Create New Role</a>

                <table class="table table-hover table-striped table-bordered text-center">
                    <thead class="thead-dark">
                        <tr>
                            <th>Role Name</th>
                            <th>Is Active</th>
                            <th>Created On</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.IsActive</td>
                                <td>@item.CreatedAt</td>
                                <td>
                                    <div class="dropdown">
                                        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">Actions</button>
                                        <div class="dropdown-menu">
                                            <a asp-controller="RoleManagement" asp-action="Update" asp-route-id="@item.Id" class="dropdown-item">Update</a>
                                            <a asp-controller="RoleManagement" asp-action="Delete" asp-route-id="@item.Id" class="dropdown-item">Delete</a>
                                            <a asp-controller="RoleManagement" asp-action="Details" asp-route-id="@item.Id" class="dropdown-item">Details</a>
                                            <a asp-controller="RoleManagement" asp-action="AddOrRemoveUser" asp-route-RoleId="@item.Id" class="dropdown-item">Add/Remove Users</a>

                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>

</div>
