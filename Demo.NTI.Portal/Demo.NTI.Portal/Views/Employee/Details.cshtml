
@model EmployeeVM


@{
    ViewData["Title"] = "Index";
}


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Employees</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Employees</a></li>
                        <li class="breadcrumb-item active">Employees Card</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- Small boxes (Stat box) -->


            <div class="row">

                <input type="text" placeholder="@Model.Name" class="form-control" readonly />
                <br /><br />

                <input type="text" placeholder="@Model.Email" class="form-control" readonly />
                <br /><br />

                <input type="text" placeholder="@Model.Salary"  class="form-control" readonly />
                <br /><br />

                <input type="text" placeholder="@Model.HireDate" class="form-control" readonly />
                <br /><br />

                <input type="text" placeholder="@Model.DepartmentName" class="form-control" readonly />
                <br /><br />

                <center>
                    <a asp-controller="Employee" asp-action="Index" class="btn btn-primary">Return</a>
                    <a asp-controller="Employee" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
                    <a asp-controller="Employee" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-success">Delete</a>
                </center>

            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
